# Mailu Docker Compose (consolidated with nginx-proxy)
# Generated by Ansible

services:
  redis:
    image: redis:alpine
    restart: always
    volumes:
      - "{{ mailu_install_path }}/redis:/data"
    networks:
      - mailu

  # Front handles mail ports only - HTTP goes through nginx-proxy
  front:
    image: ghcr.io/mailu/nginx:2024.06
    restart: always
    env_file: mailu.env
    ports:
      # Mail ports only - HTTP/HTTPS handled by nginx-proxy
      - "{{ mailu_smtp_port }}:25"
      - "{{ mailu_smtps_port }}:465"
      - "{{ mailu_submission_port }}:587"
      - "{{ mailu_imap_port }}:143"
      - "{{ mailu_imaps_port }}:993"
    volumes:
      # Use certs from nginx-proxy's letsencrypt companion
      - certs:/certs:ro
      - "{{ mailu_install_path }}/overrides/nginx:/overrides:ro"
    environment:
      - VIRTUAL_HOST={{ mailu_hostname }}
      - VIRTUAL_PORT=80
      - LETSENCRYPT_HOST={{ mailu_hostname }}
      - LETSENCRYPT_EMAIL={{ mailu_admin_email | default('admin@' + mailu_domain) }}
    networks:
      - mailu
      - nginx-proxy
    depends_on:
      - resolver
    dns:
      - 192.168.203.254

  resolver:
    image: ghcr.io/mailu/unbound:2024.06
    restart: always
    env_file: mailu.env
    networks:
      mailu:
        ipv4_address: 192.168.203.254

  admin:
    image: ghcr.io/mailu/admin:2024.06
    restart: always
    env_file: mailu.env
    volumes:
      - "{{ mailu_install_path }}/data:/data"
      - "{{ mailu_install_path }}/dkim:/dkim"
    networks:
      - mailu
    depends_on:
      - redis
      - resolver
    dns:
      - 192.168.203.254

  imap:
    image: ghcr.io/mailu/dovecot:2024.06
    restart: always
    env_file: mailu.env
    volumes:
      - "{{ mailu_install_path }}/mail:/mail"
      - "{{ mailu_install_path }}/overrides/dovecot:/overrides:ro"
    networks:
      - mailu
    depends_on:
      - front
      - resolver
    dns:
      - 192.168.203.254

  smtp:
    image: ghcr.io/mailu/postfix:2024.06
    restart: always
    env_file: mailu.env
    volumes:
      - "{{ mailu_install_path }}/mailqueue:/queue"
      - "{{ mailu_install_path }}/overrides/postfix:/overrides:ro"
    networks:
      - mailu
    depends_on:
      - front
      - resolver
    dns:
      - 192.168.203.254

  oletools:
    image: ghcr.io/mailu/oletools:2024.06
    restart: always
    networks:
      - mailu
    depends_on:
      - resolver
    dns:
      - 192.168.203.254

  antispam:
    image: ghcr.io/mailu/rspamd:2024.06
    restart: always
    env_file: mailu.env
    volumes:
      - "{{ mailu_install_path }}/filter:/var/lib/rspamd"
      - "{{ mailu_install_path }}/overrides/rspamd:/overrides:ro"
    networks:
      - mailu
    depends_on:
      - front
      - resolver
      - oletools
    dns:
      - 192.168.203.254

{% if mailu_antivirus %}
  antivirus:
    image: ghcr.io/mailu/clamav:2024.06
    restart: always
    env_file: mailu.env
    volumes:
      - "{{ mailu_install_path }}/filter:/data"
    networks:
      - mailu
    depends_on:
      - resolver
    dns:
      - 192.168.203.254
{% endif %}

{% if mailu_webmail != 'none' %}
  webmail:
    image: ghcr.io/mailu/webmail:2024.06
    restart: always
    env_file: mailu.env
    volumes:
      - "{{ mailu_install_path }}/webmail:/data"
      - "{{ mailu_install_path }}/overrides/{{ mailu_webmail }}:/overrides:ro"
    networks:
      - mailu
    depends_on:
      - front
{% endif %}

{% if mailu_webdav %}
  webdav:
    image: ghcr.io/mailu/radicale:2024.06
    restart: always
    env_file: mailu.env
    volumes:
      - "{{ mailu_install_path }}/dav:/data"
    networks:
      - mailu
{% endif %}

{% if mailu_fetchmail %}
  fetchmail:
    image: ghcr.io/mailu/fetchmail:2024.06
    restart: always
    env_file: mailu.env
    volumes:
      - "{{ mailu_install_path }}/data:/data"
    networks:
      - mailu
    depends_on:
      - admin
      - smtp
      - imap
      - resolver
    dns:
      - 192.168.203.254
{% endif %}

networks:
  mailu:
    driver: bridge
    ipam:
      config:
        - subnet: {{ mailu_subnet }}
  nginx-proxy:
    external: true

volumes:
  certs:
    external: true
