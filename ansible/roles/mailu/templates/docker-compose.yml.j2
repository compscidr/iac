# Mailu Docker Compose
# Generated by Ansible

services:
  redis:
    image: redis:alpine
    restart: always
    volumes:
      - "{{ mailu_install_path }}/redis:/data"
    networks:
      - default

  front:
    image: ghcr.io/mailu/nginx:2024.06
    restart: always
    env_file: mailu.env
    ports:
      - "{{ mailu_http_port }}:80"
      - "{{ mailu_https_port }}:443"
      - "{{ mailu_smtp_port }}:25"
      - "{{ mailu_smtps_port }}:465"
      - "{{ mailu_submission_port }}:587"
      - "{{ mailu_imap_port }}:143"
      - "{{ mailu_imaps_port }}:993"
    volumes:
      - "{{ mailu_install_path }}/certs:/certs"
      - "{{ mailu_install_path }}/overrides/nginx:/overrides:ro"
    networks:
      - default
    depends_on:
      - resolver
    dns:
      - 192.168.203.254

  resolver:
    image: ghcr.io/mailu/unbound:2024.06
    restart: always
    env_file: mailu.env
    networks:
      default:
        ipv4_address: 192.168.203.254

  admin:
    image: ghcr.io/mailu/admin:2024.06
    restart: always
    env_file: mailu.env
    volumes:
      - "{{ mailu_install_path }}/data:/data"
      - "{{ mailu_install_path }}/dkim:/dkim"
    networks:
      - default
    depends_on:
      - redis
      - resolver
    dns:
      - 192.168.203.254

  imap:
    image: ghcr.io/mailu/dovecot:2024.06
    restart: always
    env_file: mailu.env
    volumes:
      - "{{ mailu_install_path }}/mail:/mail"
      - "{{ mailu_install_path }}/overrides/dovecot:/overrides:ro"
    networks:
      - default
    depends_on:
      - front
      - resolver
    dns:
      - 192.168.203.254

  smtp:
    image: ghcr.io/mailu/postfix:2024.06
    restart: always
    env_file: mailu.env
    volumes:
      - "{{ mailu_install_path }}/mailqueue:/queue"
      - "{{ mailu_install_path }}/overrides/postfix:/overrides:ro"
    networks:
      - default
    depends_on:
      - front
      - resolver
    dns:
      - 192.168.203.254

  oletools:
    image: ghcr.io/mailu/oletools:2024.06
    restart: always
    networks:
      - default
    depends_on:
      - resolver
    dns:
      - 192.168.203.254

  antispam:
    image: ghcr.io/mailu/rspamd:2024.06
    restart: always
    env_file: mailu.env
    volumes:
      - "{{ mailu_install_path }}/filter:/var/lib/rspamd"
      - "{{ mailu_install_path }}/overrides/rspamd:/overrides:ro"
    networks:
      - default
    depends_on:
      - front
      - resolver
      - oletools
    dns:
      - 192.168.203.254

{% if mailu_antivirus %}
  antivirus:
    image: ghcr.io/mailu/clamav:2024.06
    restart: always
    env_file: mailu.env
    volumes:
      - "{{ mailu_install_path }}/filter:/data"
    networks:
      - default
    depends_on:
      - resolver
    dns:
      - 192.168.203.254
{% endif %}

{% if mailu_webmail != 'none' %}
  webmail:
    image: ghcr.io/mailu/webmail:2024.06
    restart: always
    env_file: mailu.env
    volumes:
      - "{{ mailu_install_path }}/webmail:/data"
      - "{{ mailu_install_path }}/overrides/{{ mailu_webmail }}:/overrides:ro"
    networks:
      - default
    depends_on:
      - front
{% endif %}

{% if mailu_webdav %}
  webdav:
    image: ghcr.io/mailu/radicale:2024.06
    restart: always
    env_file: mailu.env
    volumes:
      - "{{ mailu_install_path }}/dav:/data"
    networks:
      - default
{% endif %}

{% if mailu_fetchmail %}
  fetchmail:
    image: ghcr.io/mailu/fetchmail:2024.06
    restart: always
    env_file: mailu.env
    volumes:
      - "{{ mailu_install_path }}/data:/data"
    networks:
      - default
    depends_on:
      - admin
      - smtp
      - imap
      - resolver
    dns:
      - 192.168.203.254
{% endif %}

networks:
  default:
    driver: bridge
    ipam:
      config:
        - subnet: {{ mailu_subnet }}
