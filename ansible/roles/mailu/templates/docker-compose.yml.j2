# Mailu Docker Compose (consolidated with nginx-proxy)
# Generated by Ansible
# Images pinned to specific digests for supply chain security

services:
  redis:
    image: redis:alpine
    restart: always
    volumes:
      - "{{ mailu_install_path }}/redis:/data"
    networks:
      - mailu

  # Front handles mail ports only - HTTP goes through nginx-proxy
  front:
    image: {{ mailu_images.nginx.image }}@{{ mailu_images.nginx.digest }}
    restart: always
    env_file: mailu.env
    ports:
      # Mail ports only - HTTP/HTTPS handled by nginx-proxy
      - "{{ mailu_smtp_port }}:25"
      - "{{ mailu_smtps_port }}:465"
      - "{{ mailu_submission_port }}:587"
      - "{{ mailu_imap_port }}:143"
      - "{{ mailu_imaps_port }}:993"
    volumes:
      # Use certs from nginx-proxy's letsencrypt companion
      - certs:/certs:ro
      - "{{ mailu_install_path }}/overrides/nginx:/overrides:ro"
    environment:
      - VIRTUAL_HOST={{ mailu_hostname }}
      - VIRTUAL_PORT=80
      - LETSENCRYPT_HOST={{ mailu_hostname }}
      - LETSENCRYPT_EMAIL={{ mailu_admin_email | default('admin@' + mailu_domain) }}
    networks:
      - mailu
      - nginx-proxy
    depends_on:
      - resolver
    dns:
      - {{ mailu_resolver_ip }}

  resolver:
    image: {{ mailu_images.unbound.image }}@{{ mailu_images.unbound.digest }}
    restart: always
    env_file: mailu.env
    networks:
      mailu:
        ipv4_address: {{ mailu_resolver_ip }}

  admin:
    image: {{ mailu_images.admin.image }}@{{ mailu_images.admin.digest }}
    restart: always
    env_file: mailu.env
    volumes:
      - "{{ mailu_install_path }}/data:/data"
      - "{{ mailu_install_path }}/dkim:/dkim"
    networks:
      - mailu
    depends_on:
      - redis
      - resolver
    dns:
      - {{ mailu_resolver_ip }}

  imap:
    image: {{ mailu_images.dovecot.image }}@{{ mailu_images.dovecot.digest }}
    restart: always
    env_file: mailu.env
    volumes:
      - "{{ mailu_install_path }}/mail:/mail"
      - "{{ mailu_install_path }}/overrides/dovecot:/overrides:ro"
    networks:
      - mailu
    depends_on:
      - front
      - resolver
    dns:
      - {{ mailu_resolver_ip }}

  smtp:
    image: {{ mailu_images.postfix.image }}@{{ mailu_images.postfix.digest }}
    restart: always
    env_file: mailu.env
    volumes:
      - "{{ mailu_install_path }}/mailqueue:/queue"
      - "{{ mailu_install_path }}/overrides/postfix:/overrides:ro"
    networks:
      - mailu
    depends_on:
      - front
      - resolver
    dns:
      - {{ mailu_resolver_ip }}

  oletools:
    image: {{ mailu_images.oletools.image }}@{{ mailu_images.oletools.digest }}
    restart: always
    networks:
      - mailu
    depends_on:
      - resolver
    dns:
      - {{ mailu_resolver_ip }}

  antispam:
    image: {{ mailu_images.rspamd.image }}@{{ mailu_images.rspamd.digest }}
    restart: always
    env_file: mailu.env
    volumes:
      - "{{ mailu_install_path }}/filter:/var/lib/rspamd"
      - "{{ mailu_install_path }}/overrides/rspamd:/overrides:ro"
    networks:
      - mailu
    depends_on:
      - front
      - resolver
      - oletools
    dns:
      - {{ mailu_resolver_ip }}

{% if mailu_antivirus %}
  antivirus:
    image: {{ mailu_images.clamav.image }}@{{ mailu_images.clamav.digest }}
    restart: always
    env_file: mailu.env
    volumes:
      - "{{ mailu_install_path }}/filter:/data"
    networks:
      - mailu
    depends_on:
      - resolver
    dns:
      - {{ mailu_resolver_ip }}
{% endif %}

{% if mailu_webmail != 'none' %}
  webmail:
    image: {{ mailu_images.webmail.image }}@{{ mailu_images.webmail.digest }}
    restart: always
    env_file: mailu.env
    volumes:
      - "{{ mailu_install_path }}/webmail:/data"
      - "{{ mailu_install_path }}/overrides/{{ mailu_webmail }}:/overrides:ro"
    networks:
      - mailu
    depends_on:
      - front
{% endif %}

{% if mailu_webdav %}
  webdav:
    image: {{ mailu_images.radicale.image }}@{{ mailu_images.radicale.digest }}
    restart: always
    env_file: mailu.env
    volumes:
      - "{{ mailu_install_path }}/dav:/data"
    networks:
      - mailu
{% endif %}

{% if mailu_fetchmail %}
  fetchmail:
    image: {{ mailu_images.fetchmail.image }}@{{ mailu_images.fetchmail.digest }}
    restart: always
    env_file: mailu.env
    volumes:
      - "{{ mailu_install_path }}/data:/data"
    networks:
      - mailu
    depends_on:
      - admin
      - smtp
      - imap
      - resolver
    dns:
      - {{ mailu_resolver_ip }}
{% endif %}

networks:
  mailu:
    driver: bridge
    ipam:
      config:
        - subnet: {{ mailu_subnet }}
  nginx-proxy:
    external: true

volumes:
  certs:
    external: true
